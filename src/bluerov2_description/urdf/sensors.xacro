<?xml version="1.0"?>
<!-- Sensori del BlueROV2: IMU, camera con tilt, sonar Ping360 e controller -->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<!-- Offset X della camera rispetto al base_link e valore di PI -->
<xacro:property name="x_camera" value="0.02"/>
<xacro:property name="PI" value="3.1415927"/>

<!-- Macro per creare un link IMU e un sensore IMU in Gazebo -->
<xacro:macro name="imu" params="name *origin">
    <!-- Link del sensore IMU -->
    <link name="${ns}/${name}"/>
    <!-- Configurazione del sensore IMU in Gazebo -->
    <gazebo reference="${ns}/${name}">
    <sensor name="${name}_imu" type="imu">
            <always_on>1</always_on>
            <update_rate>10</update_rate>
            <visualize>true</visualize>
            <topic>${ns}/${name}</topic>
            <gz_frame_id>${ns}/${name}</gz_frame_id>
      <imu>
        <!-- Rumore gaussiano su velocitÃ  angolare (x,y,z) -->
        <angular_velocity>
          <x>
            <noise type="gaussian">
              <mean>0</mean>
              <stddev>0.009</stddev>
              <bias_mean>0.00075</bias_mean>
              <bias_stddev>0.005</bias_stddev>
              <dynamic_bias_stddev>0.00002</dynamic_bias_stddev>
              <dynamic_bias_correlation_time>400.0</dynamic_bias_correlation_time>
              <precision>0.00025</precision>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0</mean>
              <stddev>0.009</stddev>
              <bias_mean>0.00075</bias_mean>
              <bias_stddev>0.005</bias_stddev>
              <dynamic_bias_stddev>0.00002</dynamic_bias_stddev>
              <dynamic_bias_correlation_time>400.0</dynamic_bias_correlation_time>
              <precision>0.00025</precision>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0</mean>
              <stddev>0.009</stddev>
              <bias_mean>0.00075</bias_mean>
              <bias_stddev>0.005</bias_stddev>
              <dynamic_bias_stddev>0.00002</dynamic_bias_stddev>
              <dynamic_bias_correlation_time>400.0</dynamic_bias_correlation_time>
              <precision>0.00025</precision>
            </noise>
          </z>
        </angular_velocity>
        <!-- Rumore gaussiano su accelerazione lineare (x,y,z) -->
        <linear_acceleration>
          <x>
            <noise type="gaussian">
              <mean>0</mean>
              <stddev>0.021</stddev>
              <bias_mean>0.05</bias_mean>
              <bias_stddev>0.0075</bias_stddev>
              <dynamic_bias_stddev>0.000375</dynamic_bias_stddev>
              <dynamic_bias_correlation_time>175.0</dynamic_bias_correlation_time>
              <precision>0.005</precision>
            </noise>
          </x>
          <y>
            <noise type="gaussian">
              <mean>0</mean>
              <stddev>0.021</stddev>
              <bias_mean>0.05</bias_mean>
              <bias_stddev>0.0075</bias_stddev>
              <dynamic_bias_stddev>0.000375</dynamic_bias_stddev>
              <dynamic_bias_correlation_time>175.0</dynamic_bias_correlation_time>
              <precision>0.005</precision>
            </noise>
          </y>
          <z>
            <noise type="gaussian">
              <mean>0</mean>
              <stddev>0.021</stddev>
              <bias_mean>0.05</bias_mean>
              <bias_stddev>0.0075</bias_stddev>
              <dynamic_bias_stddev>0.000375</dynamic_bias_stddev>
              <dynamic_bias_correlation_time>175.0</dynamic_bias_correlation_time>
              <precision>0.005</precision>
            </noise>
          </z>
        </linear_acceleration>
        <!-- Riferimento di orientazione ENU (East-North-Up) -->
        <orientation_reference_frame>
          <localization>ENU</localization>
        </orientation_reference_frame>
      </imu>
        </sensor>
      </gazebo>
     <!-- Giunto fisso per collegare l'IMU al base_link del veicolo -->
     <joint name="${name}" type="fixed">
        <xacro:insert_block name="origin"/>
        <parent link="${ns}/base_link"/>
        <child link="${ns}/${name}"/>
    </joint>
</xacro:macro>

<!-- Istanziazione IMU tipo MPU -->
<xacro:imu name="mpu">
  <origin xyz="0.1 0 0" rpy="0 0 ${-PI/2}"/>
</xacro:imu>

<!-- Istanziazione IMU tipo LSM -->
<xacro:imu name="lsm">
  <origin xyz="0.1 0 0" rpy="0 0 ${-PI/2}"/>
</xacro:imu>

  
  <!-- Sensore di pressione (barometro) - opzionale/commentato -->
<!--  <xacro:default_pressure parent_link="${ns}/base_link" sensor_name="baro">
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </xacro:default_pressure>-->
  
  
  <!-- Link della camera con inerzia semplificata -->
  <link name="${ns}/camera">
    <inertial>
    <mass value="0.015"/>
    <inertia
    ixx="0.001"
    ixy="0.0"
    ixz="0.0"
    iyy="0.001"
    iyz="0"
    izz="0.001"/>
    </inertial>
 </link> 

<!-- Giunto di tilt della camera (asse Y) -->
<joint name="tilt" type="revolute">
    <parent link="${ns}/base_link"/>
    <child link="${ns}/camera"/>
    <origin xyz="${x_camera + .15} 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0" />
    <limit effort="100" velocity="5.0" lower="${-PI/3}" upper="${PI/3}"/>
    <dynamics damping="0.8"/>
</joint>

<!-- Link del frame ottico della camera (convenzione ROS) -->
<link name="${ns}/camera_optical"/>

<!-- Giunto fisso tra camera e frame ottico -->
<joint name="camera_optical" type="fixed">
    <parent link="${ns}/camera"/>
    <child link="${ns}/camera_optical"/>
    <origin rpy="${-PI/2} 0 ${-PI/2}"/>
</joint>

<!-- Link del sonar Ping360 -->
<link name="${ns}/sonar">
    <visual>
      <origin xyz="0 0 -0.022" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://bluerov2_description/meshes/ping360_sonar.dae"
              scale="0.01 0.01 0.01"/>/>
      </geometry>

    </visual>
</link>

<!-- Giunto fisso per montare il sonar sul base_link -->
<joint name="sonar" type="fixed">
    <parent link="${ns}/base_link"/>
    <child link="${ns}/sonar"/>
    <origin xyz="0.135 0.108 0.118"/>
</joint>

<!-- Sensore sonar basato su GPU Ray -->
<gazebo reference="${ns}/sonar">
  <sensor type="gpu_ray" name="ping360_sonar">
    <update_rate>5</update_rate>
    <topic>${ns}/sonar</topic>
    <visualize>true</visualize>
    <gz_frame_id>${ns}/sonar</gz_frame_id>
    <ray>
      <scan>
        <horizontal>
          <samples>360</samples>
          <resolution>1</resolution>
          <min_angle>0.0</min_angle>
          <max_angle>6.28319</max_angle>
        </horizontal>
         <vertical>
            <samples>10</samples>
            <resolution>1</resolution>
            <min_angle>-0.1</min_angle>
            <max_angle>0.1</max_angle>
          </vertical>
      </scan>
      <range>
        <min>0.1</min>
        <max>20.</max>
        <resolution>0.015</resolution>
      </range>
      <noise>
        <type>gaussian</type>
        <mean>0.0</mean>
        <stddev>0.01</stddev>
      </noise>
    </ray>
  </sensor>
</gazebo>

<!-- Controller PID di posizione per il giunto tilt della camera -->
<gazebo>
    <plugin filename="ignition-gazebo-joint-position-controller-system" name="ignition::gazebo::systems::JointPositionController">
        <joint_name>tilt</joint_name>
        <p_gain>10.</p_gain>
        <i_gain>0.2</i_gain>
        <d_gain>0.1</d_gain>
        <i_max>10</i_max>
        <i_min>-10</i_min>
    </plugin>
</gazebo>

 <!-- Sensore camera RGB con frame ottico e parametri immagine -->
 <gazebo reference="${ns}/camera">
  <sensor name="camera" type="camera">
    <camera>
    <optical_frame_id>${ns}/camera_optical</optical_frame_id>
    <horizontal_fov>1.047</horizontal_fov>
    <image>
        <width>640</width>
        <height>400</height>
    </image>
    <clip>
        <near>0.1</near>
        <far>100</far>
    </clip>
    </camera>
    <always_on>1</always_on>
    <update_rate>20</update_rate>
    <visualize>true</visualize>
    <topic>${ns}/image</topic>
    <enable_metrics>false</enable_metrics>
  </sensor>
</gazebo>
</robot>
